{
  "root": true,
  "env": {
    "node": true
  },
  "extends": ["plugin:vue/essential", "eslint:recommended"],
  "overrides": [
    {
      "files": ["*.vue", "*.js"],
      "rules": {
        "semi": ["error", "never"],
        "no-console": "error",
        "no-unused-vars": [
          "error",
          {
            "args": "after-used"
          }
        ],
        "no-mixed-spaces-and-tabs": "error",
        "no-var": "error",
        "object-curly-spacing": ["error", "always"],
        "no-alert": "error",
        "no-prototype-builtins": "off"
      }
    }
  ],
  "parserOptions": {
    "parser": "babel-eslint"
  }
}
